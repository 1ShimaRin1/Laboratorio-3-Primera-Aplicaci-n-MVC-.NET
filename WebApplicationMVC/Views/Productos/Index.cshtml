@model IEnumerable<WebApplicationMVC.Models.Producto>

@{
    ViewBag.Title = "Listado de Productos";
}

<h2>@ViewBag.Title</h2>

<p>
    @Html.ActionLink("Agregar Perecible", "CreatePerecible") |
    @Html.ActionLink("Agregar No Perecible", "CreateNoPerecible")
</p>

<table class="table">
    <tr>
        <th>Nombre</th>
        <th>Tipo</th>
        <th>Acciones</th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>@Html.DisplayFor(modelItem => item.Nombre)</td>
            <td>
                @if (item is WebApplicationMVC.Models.ProductoPerecible)
                {
                    <span class="label label-warning">Perecible</span>
                }
                else if (item is WebApplicationMVC.Models.ProductoNoPerecible)
                {
                    <span class="label label-info">No Perecible</span>
                }
            </td>
            <td>
                @Html.ActionLink("Detalles", "Details", new { id = item.Id }, new { @class = "btn btn-info btn-xs" })
            </td>
        </tr>
    }
</table>